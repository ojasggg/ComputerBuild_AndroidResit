<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"

    tools:context=".ShowSelectedItem"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pimage1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:adjustViewBounds="true"
            android:src="@drawable/motherboard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/proximanovaregular"
            android:text="Computer parts"
            android:textColor="@android:color/background_dark"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pimage1"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/itemType1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/proximanovaregular"
            android:text="Computer Parts type : "
            android:textColor="#044363"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="@+id/itemTitle1"
            app:layout_constraintTop_toBottomOf="@+id/itemTitle1"
            />

        <TextView
            android:id="@+id/itemPrice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/proximanovaregular"
            android:text="Price : "
            android:textSize="22sp"
            android:textColor="#044363"
            app:layout_constraintStart_toStartOf="@+id/itemType1"
            app:layout_constraintTop_toBottomOf="@+id/itemType1" />

        <TextView
            android:id="@+id/itemCategory1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="22sp"
            android:fontFamily="@font/proximanovaregular"
            android:text="Category : "
            android:textColor="#044363"
            app:layout_constraintStart_toStartOf="@+id/itemPrice1"
            app:layout_constraintTop_toBottomOf="@+id/itemPrice1" />


        <TextView
            android:id="@+id/itemTypeInsert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/proximanovaregular"
            android:text="MSI Motherboard"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/itemType1"
            app:layout_constraintStart_toEndOf="@+id/itemType1"
            app:layout_constraintTop_toTopOf="@+id/itemType1"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/itemCategoryInsert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/proximanovaregular"
            android:text="MotherBoard"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/itemCategory1"
            app:layout_constraintStart_toEndOf="@+id/itemCategory1"
            app:layout_constraintTop_toTopOf="@+id/itemCategory1" />

        <TextView
            android:id="@+id/itemPriceInsert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/proximanovaregular"
            android:text="$500"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/itemPrice1"
            app:layout_constraintStart_toEndOf="@+id/itemPrice1"
            app:layout_constraintTop_toTopOf="@+id/itemPrice1"
            android:layout_marginLeft="16dp" />


        <TextView
            android:id="@+id/itemdescc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:text="Click to Select this Part."
            app:layout_constraintBottom_toTopOf="@+id/buttonApply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.432"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/itemCategoryInsert"
            app:layout_constraintVertical_bias="0.051" />

        <Button
            android:id="@+id/buttonApply"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/gradientv1"
            android:fontFamily="@font/proximanovaregular"
            android:text="Select Item"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemdescc" />



    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>